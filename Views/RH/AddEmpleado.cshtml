@model SysSara.Models.Dtos.EmpleadoDto

@{
    ViewData["Title"] = "Nuevo Empleados";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Nuevo Empleado</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Inicio</a></li>
                    <li class="breadcrumb-item "><a asp-action="Empleados">Empleados</a></li>
                    <li class="breadcrumb-item active">Nuevo</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="container-fluid">        
        <div class="row">
            <div class="col-lg-12">
                <form method="post" asp-action="AddEmpleado" >
                <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
                <div class="card card-orange card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Generales</h3>                        
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-sm-4">
                                <label asp-for="Apaterno" class="control-label"></label>
                                <input asp-for="Apaterno" class="form-control form-control-sm" />
                                <span asp-validation-for="Apaterno" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4">
                                <label asp-for="Amaterno" class="control-label"></label>
                                <input asp-for="Amaterno" class="form-control form-control-sm" />
                                <span asp-validation-for="Amaterno" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-4">
                                <label asp-for="Nombre" class="control-label"></label>
                                <input asp-for="Nombre" class="form-control form-control-sm" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-2">
                                <label asp-for="FechaNacimiento" class="control-label"></label>
                                <input asp-for="FechaNacimiento" class="form-control form-control-sm" />
                                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="Curp" class="control-label"></label>
                                <input asp-for="Curp" class="form-control form-control-sm" />
                                <span asp-validation-for="Curp" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="SeguridadSocial" class="control-label"></label>
                                <input asp-for="SeguridadSocial" class="form-control form-control-sm" />
                                <span asp-validation-for="SeguridadSocial" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="Telefono" class="control-label"></label>
                                <input asp-for="Telefono" class="form-control form-control-sm" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="Celular" class="control-label"></label>
                                <input asp-for="Celular" class="form-control form-control-sm" />
                                <span asp-validation-for="Celular" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-2">
                                <label asp-for="Rfc" class="control-label"></label>
                                <input asp-for="Rfc" class="form-control form-control-sm" />
                                <span asp-validation-for="Rfc" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="Categoria" class="control-label"></label>
                                <input asp-for="Categoria" class="form-control form-control-sm" />
                                <span asp-validation-for="Categoria" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="TipoSangre" class="control-label"></label>                                
                                <select asp-for="TipoSangre" asp-items="Model.TiposSangre" class="form-control form-control-sm" ></select>
                                <span asp-validation-for="TipoSangre" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="FechaIngreso" class="control-label"></label>
                                <input asp-for="FechaIngreso" class="form-control form-control-sm" />
                                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="Estatus" class="control-label"></label>
                                <input asp-for="Estatus" class="form-control form-control-sm" />
                                <span asp-validation-for="Estatus" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-3">
                                <label asp-for="DepartamentoId" class="control-label"></label>                                
                                <select asp-for="DepartamentoId" asp-items="Model.Departamentos" class="form-control form-control-sm " ></select>
                                <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="Rol" class="control-label"></label>
                                @* <input asp-for="Rol" class="form-control form-control-sm" /> *@
                                <select asp-for="Rol" asp-items="Model.Roles" class="form-control form-control-sm select2" ></select>
                                <span asp-validation-for="Rol" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="Usuario" class="control-label"></label>
                                <input asp-for="Usuario" class="form-control form-control-sm" />
                                <span asp-validation-for="Usuario" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="Contraseña" class="control-label"></label>
                                <input asp-for="Contraseña" class="form-control form-control-sm" />
                                <span asp-validation-for="Contraseña" class="text-danger"></span>
                            </div>                            
                        </div>
                    </div>
                </div>
                
                <div class="card card-orange card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Domicilio</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-sm-8">
                                <label asp-for="Calle" class="control-label"></label>
                                <input asp-for="Calle" class="form-control form-control-sm" />
                                <span asp-validation-for="Calle" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="NoExt" class="control-label"></label>
                                <input asp-for="NoExt" class="form-control form-control-sm" />
                                <span asp-validation-for="NoExt" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-2">
                                <label asp-for="NoInt" class="control-label"></label>
                                <input asp-for="NoInt" class="form-control form-control-sm" />
                                <span asp-validation-for="NoInt" class="text-danger"></span>
                            </div>                                                      
                        </div>
                        <div class="form-row">
                            <div class="form-group col-sm-3">
                                <label asp-for="Estado" class="control-label"></label>
                                <select asp-for="Estado" asp-items="Model.Estados" class="form-control form-control-sm" ></select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>
                             <div class="form-group col-sm-3">
                                <label asp-for="Municipio" class="control-label"></label>
                                <select asp-for="Municipio" asp-items="Model.Municipios" class="form-control form-control-sm" ></select>
                                <span asp-validation-for="Municipio" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="Poblacion" class="control-label"></label>
                                <select asp-for="Poblacion" asp-items="Model.Poblaciones" class="form-control form-control-sm" ></select>
                                <span asp-validation-for="Poblacion" class="text-danger"></span>
                            </div>
                            <div class="form-group col-sm-3">
                                <label asp-for="Colonia" class="control-label"></label>
                                <select asp-for="Colonia" asp-items="Model.Colonias" class="form-control form-control-sm" ></select>
                                <span asp-validation-for="Colonia" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
            
                <div class="card">                
                    <div class="card-body">
                        <button class="btn btn-sm btn-info" type="reset">Cancelar</button>
                        <button class="btn btn-sm btn-info float-right" type="submit">Guardar</button>
                    </div>
                </div>

                </form>
            </div>  
            
        </div>
        
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        $('.select2').select2({
            language: 'es',
            theme: 'bootstrap4',
            width: 'auto',
            //minimumResultsForSearch: 10,            
            selectionCssClass: 'form-control form-control-sm',
        });

        if('@Model.Mensaje.Mensaje' == 'True'){            
            MensajeAlerta('@Model.Mensaje.Titulo', '@Model.Mensaje.Texto', '@Model.Mensaje.Icono');
        }        
    });
    
</script>