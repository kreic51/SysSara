      </li> *@
      <li class="nav-item">
          <a class="nav-link" id="BTheme" href="#" role="button">
            <i id="BThemeIcon" class="fas fa-moon"></i>            
          </a>
        </li>

        @if(!User.Identity.IsAuthenticated){
          <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">
              <span class="d-none d-md-inline mr-2">Iniciar Sesión</span>
              <i class="fas fa-sign-in-alt"></i>                  
            </a>
          </li>          
        }else{        
          <li class="nav-item dropdown user-menu">
            <a class="nav-link" data-toggle="dropdown" href="#">
              <span class="d-none d-md-inline mr-2">@User.FindFirst("Username").Value</span>            
                <img src='~/lib/AdminLTE/img/@User.FindFirst("Foto").Value' class="user-image img-circle elevation-2" alt="User Image">
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
              <div class="m-3">
                  <div class="text-center">
                    <img class="profile-user-img img-fluid img-circle" src='~/lib/AdminLTE/img/@User.FindFirst("Foto").Value' alt="User profile picture">
                  </div>
                  <h3 class="profile-username text-center">@User.Identity.Name</h3>
                  <p class="text-muted text-center">@User.FindFirst("Departamento").Value</p>
              </div>            
              <div class="dropdown-divider"></div>
              <a asp-controller="Account" asp-action="Logout" class="dropdown-item">
                Salir <span class="float-right"><i class="fas fa-sign-out-alt"></i></span>              
              </a>
            </div>
          </li> 
        }
